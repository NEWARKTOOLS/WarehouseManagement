# Warehouse Management System - Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_CONFIG=development
SECRET_KEY=change-this-to-a-long-random-string-in-production

# Database (optional - defaults to SQLite in instance folder)
# DATABASE_URL=sqlite:///instance/warehouse.db

# Company
COMPANY_NAME=Your Company Name

# Xero Integration (optional)
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret
XERO_REDIRECT_URI=http://localhost:5000/xero/callback

# Server
PORT=5000
